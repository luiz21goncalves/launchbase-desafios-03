{% extends "layout.njk" %}

{% block head %}

  <title> Conteúdos - Rocketseat</title>
  <link rel="stylesheet" href="style.css">
  <link rel="icon" href="https://raw.githubusercontent.com/Rocketseat/bootcamp-launchbase-desafios-02/master/desafios/favicon.ico" type="image/x-icon">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock head %}

{% block content %}

  <section>
    <div class="cards">
      <div class="card" id="starter">
        <div class="card-content">
          <img src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" alt="logo starter">
          <h3>Starter</h3>
        </div>
        <div class="card-info">
          <P>Módulos</P>
        <div class="card-price">
          <p>Free</p>
        </div>
        </div>
      </div>
      
      <div class="card" id="launchbase">
        <div class="card-content">
          <img src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg" alt="logo launchbase">
          <h3>LaunchBase</h3>
        </div>
        <div class="card-info">
          <P>Módulos</P>
        <div class="card-price">
          <p>Pago</p>
        </div>
        </div>
      </div>

      <div class="card" id="gostack">
        <div class="card-content">
          <img src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" alt="logo gostack">
          <h3>GoStack</h3>
        </div>
        <div class="card-info">
          <P>Módulos</P>
        <div class="card-price">
          <p>Pago</p>
        </div>
        </div>
      </div>
    </div>
  </section>

{% endblock content %}

{% block modal %}

  <div class="modal-overlay">
    <div class="modal minimized">
      <div class="modal-controls">
        <a class="minimize-modal"><i class="material-icons">remove</i></a>
        <a class="maximize-modal"><i class="material-icons">crop_square</i></a>
        <a class="close-modal"><i class="material-icons">clear</i></a>
      </div>
      <iframe src="" frameborder="0"></iframe>
    </div>
  </div>

  <script src="./script.js"></script>
  
{% endblock modal %}